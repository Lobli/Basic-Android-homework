<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MonumentItemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:text="Parlament"
            />


        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/MonumentItemCityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Budapest," />

            <TextView
                android:id="@+id/MonumentItemCountryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                tools:text="Hungary" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/MonumentItemCategoryImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        tools:src="@drawable/ic_building" />

    <ImageButton
        android:id="@+id/MonumentItemRemoveButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close" />

</LinearLayout>